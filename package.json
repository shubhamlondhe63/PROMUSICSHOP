{
  "name": "e-commers-site",
  "version": "1.0.0",
  "description": "Mern shopping site",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd frontend && npm run start",
    "backend-install": "npm install",
    "frontend-install": "cd frontend && npm install",
    "install-all": "concurrently \"npm run backend-install\" \"npm run frontend-install\"",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "heroku-postbuild": "frond frontend && npm install && npm run build"
  },
